    "eslint": "0.19.x",
    "hoek": "2.x.x",
    "mkdirp": "0.5.x"
  },
  "optionalDependencies": {
    "jslint": "0.8.x"
  },
  "devDependencies": {
    "code": "1.x.x",
    "lab-event-reporter": "1.x.x",
    "promise": "^6.1.0"
