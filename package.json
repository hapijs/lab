    "test"
  ],
  "engines": {
    "node": ">=0.10.32"
  },
  "dependencies": {
    "bossy": "1.x.x",
    "espree": "2.x.x",
    "eslint-plugin-hapi": "1.x.x",
    "handlebars": "3.x.x",
    "items": "1.x.x",
    "diff": "1.x.x",
